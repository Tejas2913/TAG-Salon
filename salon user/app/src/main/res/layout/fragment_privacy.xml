<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c10">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btPolicyBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintBottom_toTopOf="@+id/web"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textView6"
        style="@style/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Privacy Policy"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btPolicyBack"
        app:layout_constraintStart_toEndOf="@+id/btPolicyBack"
        app:layout_constraintTop_toTopOf="@+id/btPolicyBack" />

    <WebView
        android:id="@+id/web"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btPolicyBack" />
</androidx.constraintlayout.widget.ConstraintLayout>