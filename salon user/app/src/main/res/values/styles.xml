<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tvSmall">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tvHeading">
        <item name="android:fontFamily">@font/aclonica</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tvHomeButtonText">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="btSolid">
        <item name="android:background">@drawable/shape_solid</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tvBoxStyle" parent="tvSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_lt_gray</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btOutline">
        <item name="android:background">@drawable/shape_outline</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/c10</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tvNumber" parent="tvHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">40sp</item>
    </style>


    <style name="etTextStyle">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="etNumbers" parent="tvSmall">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">85%</item> <!-- Set width to 85% of screen -->
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:backgroundDimAmount">0.6</item> <!-- Dim the background -->
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>